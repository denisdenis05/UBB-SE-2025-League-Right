<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Duo.Views.Components.CreateMultipleChoiceExercise"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ListViewItemStretchStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Resources>
    <StackPanel Spacing="12">
        <ListView x:Name="AnswersTextBoxList"  SelectionMode="None"  Padding="0" 
        ItemContainerStyle="{StaticResource ListViewItemStretchStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="Answers">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding Answers}" Width="300" />
                        </StackPanel>
                    </RadioButton>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button   
                x:Name="AddNewAnswerButton"
                Content="Add new input"
                Click="AddNewAnswerButton_Click"
                Padding="16,8,16,8"
                Margin="8,0,0,0"/>
    </StackPanel>
</UserControl>
